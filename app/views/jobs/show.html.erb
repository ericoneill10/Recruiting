<html data-wf-site="5307e34e3e274f132a000190">
<head>
  <meta charset="utf-8">
  <title>Jobs</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="css/normalize_events.css.scss">
  <link rel="stylesheet" type="text/css" href="css/webflow_events.css.scss">
  <link rel="stylesheet" type="text/css" href="css/eventsrecruit.webflow.css.scss">
  <script>
    if (/mobile/i.test(navigator.userAgent)) document.documentElement.className += ' w-mobile';
  </script>
  <link rel="shortcut icon" type="image/x-icon" href="https://y7v4p6k4.ssl.hwcdn.net/placeholder/favicon.ico">
  <!--[if lt IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7/html5shiv.min.js"></script><![endif]-->
  <link rel="apple-touch-icon" href="https://y7v4p6k4.ssl.hwcdn.net/51e088cb308929c46c000051/51e1a444bceaf5b67b00004d_thumbnail-starter.png">
</head>
<body>
  <div class="section hero" >
    <div class="w-container">
      <div class="w-row">
        <div class="w-col w-col-6">
          <div width="auto" height="auto">
          </div>
        </div>
        <div class="w-col w-col-6 hero-column">
 

        
       <p> Title: <%= @job.title %> </p>
       <p> Description: <%=@job.description %> </p>
       <p> Tags: <%=@job.skill_list %> </p>

       <% if @org==@job.organization%>
          <h3>Considering</h3>
          <% for user in @considering%>
            <form action=<%= changeAppStatus_job_path %> method="post">
              <p><%= user.username %></p>
              <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> />
              <input type="hidden" name="uid" value=<%= user[:id] %> />
              Accept<input type="radio" name="status" value=1 />
              Reject<input type="radio" name="status" value=2 />
              <input type="submit" />
            </form>
          <%end %>
          <h3> Accepted</h3>
            <% for user in @accepted %>
              <p><%= user.username %></p>
            <% end %>
          <h3>Rejected</h3>
            <% for user in @rejected %>
              <p><%= user.username %></p>
            <% end %>

        <% end %>
       <% if current_user.recruiter and @job.organization == current_user.organizations.first %>
       <%= link_to 'Edit', edit_job_path, class:"button action" %>
       <% end %>

       <% if !(current_user.recruiter) && !current_user.jobs.include?(@job)%>
          <%= link_to 'Apply', userApply_job_path, class:"button action" %>
       <% end %>
       <% if !(current_user.recruiter) && current_user.jobs.include?(@job)%>
          <%= link_to 'Cancel Application', userUnapply_job_path, class:"button action" %>
       <% end %>
      </div>
    </div>
  </div>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <script type="text/javascript" src="js/webflow_events.js"></script>
</body>
</html>
