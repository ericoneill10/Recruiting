<body>
  
  <div class="section hero">
    <div class="w-container">
      <div class="w-row">
        <div class="w-col w-col-6 center">
          <% if @organization.organization_picture.exists? %>
            <img class="hero-image" src=<%= @organization.organization_picture.url(:download => false) %> width="auto" height="auto" alt="5307e81e663cb6142a000316_UC-BERKELEY.jpg">
          <% end %>
        </div>
        <div class="w-col w-col-6 hero-column">
          <h2><%= @organization.name %></h2>
          <%= @organization.location %><br>
          <%= @organization.description %><br>
            <% if @organization == @user_org[0] %>
	<%= link_to 'Edit', edit_organization_path, class:"button action" %></a>
	<%= link_to 'Add Event', new_event_path, class:"button action" %></a>
  <%= link_to 'Add Job', new_job_path, class:"button action" %> 
<% end %>

        </div>
      </div>
    </div>
  </div>

  <div class="section">
    <h2>Events</h2>

    <div class="w-container">
      <% k=0 %>
      <% for event in (@organization.events) do %>
        <% if k%4==0 %>
          <div class="w-row">
        <% end %>

        <div class="w-col w-col-3 w-col-small-6">
          
          <h3><%= link_to event.name, event %></h3>
          <p><%= event.description %></p>
            <% if event.event_picture.exists? %>
                  
                        <img class="hero-image" src=<%= event.event_picture.url(:download => false) %> width="auto" height="auto" alt="5307e81e663cb6142a000316_UC-BERKELEY.jpg">
                    <% else %>
                        <%= image_tag "UC-BERKELEY.jpg", class:"hero-image", width:"auto", height:"auto" %>    
                    <% end %>



          
        </div>

        <% if k%4==3 %>
          </div>
        <% end %>
        <% k=k+1 %>
      <% end %>
      <% if k%4 != 0 %>
        </div>
      <% end %>
  </div>
  


  <div class="section">
        <h2>Jobs</h2><br>
    <div class="w-container">
      <% k=0 %>
      <% for job in (@organization.jobs) do %>
        <% if k%4==0 %>
          <div class="w-row">
        <% end %>

        <div class="w-col w-col-3 w-col-small-6">
          
          <h3><%= link_to job.title, job %></h3>
          <p><%= job.description %></p>
        </div>

        <% if k%4==3 %>
          </div>
        <% end %>
        <% k=k+1 %>
      <% end %>
      <% if k%4 != 0 %>
        </div>
      <% end %>



      
      
  </div>

  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <script type="text/javascript" src="js/webflow_events.js"></script>
</body>
</html>