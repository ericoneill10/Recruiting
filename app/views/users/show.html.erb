<% if not @user.recruiter %>
<div class="section">
    <h2>Jobs</h2>
    <div class="w-container">
      <% k=0 %>
      <% @user.jobs.each do |job| %>
        <% if k%4==0 %>
          <div class="w-row">
        <% end %>

        <div class="w-col w-col-3 w-col-small-6">
          
          <h3><%= link_to job.title, job %></h3>
          <% ja=Jobapp.find_by_user_id_and_job_id(current_user[:id], job[:id]) %>
          <% status= ja[:status] %>
          <% if status==0 or status==nil %>
            <h5 style="background-color:yellow">Status: Pending</h5>
          <% end %>
          <% if status==1 %>
            <h5 style="background-color:green">Status: Accepted</h5>
          <% end %>
          <% if status==2 %>
            <h5 style="background-color:red">Status: Denied</h5>
          <% end %>
          <p><%= job.description %></p>
        </div>

        <% if k%4==3 %>
          </div>
        <% end %>
        <% k=k+1 %>
      <% end %>
      <% if k%4 != 0 %>
        </div>
      <% end %>
